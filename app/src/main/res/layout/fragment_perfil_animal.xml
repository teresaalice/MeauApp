<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/foto_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v4.view.ViewPager
                android:id="@+id/fotos_animal"
                android:layout_width="match_parent"
                android:layout_height="184dp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="16dp"
                android:src="@drawable/fav_button"
                app:backgroundTint="#FAFAFA"
                app:elevation="3dp"
                app:layout_constraintBottom_toBottomOf="@+id/fotos_animal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fotos_animal" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/cadastro_animal_second_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/foto_layout"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="1dp">

            <TextView
                android:id="@+id/nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-medium"
                android:text="Nome"
                android:textColor="#434343"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/caracteristicas_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/nome">

                <TextView
                    android:id="@+id/sexo_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".30"
                    android:fontFamily="sans-serif"
                    android:text="SEXO"
                    android:textColor="#F7A800" />

                <TextView
                    android:id="@+id/porte_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".30"
                    android:fontFamily="sans-serif"
                    android:text="PORTE"
                    android:textColor="#F7A800" />

                <TextView
                    android:id="@+id/idade_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".30"
                    android:fontFamily="sans-serif"
                    android:text="IDADE"
                    android:textColor="#F7A800" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/caracteristicas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/caracteristicas_info">

                <TextView
                    android:id="@+id/sexo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".30"
                    android:fontFamily="sans-serif"
                    android:text="Sexo"
                    android:textColor="#757575" />

                <TextView
                    android:id="@+id/porte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".30"
                    android:fontFamily="sans-serif"
                    android:text="Porte"
                    android:textColor="#757575" />

                <TextView
                    android:id="@+id/idade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".30"
                    android:fontFamily="sans-serif"
                    android:text="Idade"
                    android:textColor="#757575" />

            </LinearLayout>

            <TextView
                android:id="@+id/localizacao_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight=".30"
                android:fontFamily="sans-serif"
                android:text="LOCALIZAÇÃO"
                android:textColor="#F7A800"
                app:layout_constraintTop_toBottomOf="@id/caracteristicas" />

            <TextView
                android:id="@+id/localizacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:layout_weight=".30"
                android:fontFamily="sans-serif"
                android:text="Localização"
                android:textColor="#757575"
                app:layout_constraintTop_toBottomOf="@id/localizacao_info" />

            <LinearLayout
                android:id="@+id/saude_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/localizacao">

                <TextView
                    android:id="@+id/castrado_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:fontFamily="sans-serif"
                    android:text="CASTRADO"
                    android:textColor="#F7A800" />

                <TextView
                    android:id="@+id/vermifugado_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:fontFamily="sans-serif"
                    android:text="VERMIFUGADO"
                    android:textColor="#F7A800" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/saude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/saude_info">

                <TextView
                    android:id="@+id/castrado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:fontFamily="sans-serif"
                    android:text="Castrado"
                    android:textColor="#757575" />

                <TextView
                    android:id="@+id/vermifugado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:fontFamily="sans-serif"
                    android:text="Vermifugado"
                    android:textColor="#757575" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/saude_2_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/saude">

                <TextView
                    android:id="@+id/vacinado_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:fontFamily="sans-serif"
                    android:text="VACINADO"
                    android:textColor="#F7A800" />

                <TextView
                    android:id="@+id/doencas_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:fontFamily="sans-serif"
                    android:text="DOENÇAS"
                    android:textColor="#F7A800" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/saude_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/saude_2_info">

                <TextView
                    android:id="@+id/vacinado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:fontFamily="sans-serif"
                    android:text="Vacinado"
                    android:textColor="#757575" />

                <TextView
                    android:id="@+id/doencas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:fontFamily="sans-serif"
                    android:text="Doeças"
                    android:textColor="#757575" />

            </LinearLayout>

            <TextView
                android:id="@+id/temperamento_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif"
                android:text="TEMPERAMENTO"
                android:textColor="#F7A800"
                app:layout_constraintTop_toBottomOf="@id/saude_2" />

            <TextView
                android:id="@+id/temperamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                android:text="Temperamento"
                android:textColor="#757575"
                app:layout_constraintTop_toBottomOf="@id/temperamento_info" />

            <LinearLayout
                android:id="@+id/blocos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/temperamento">

                <LinearLayout
                    android:id="@+id/adocao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/exigencias_doacao_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="sans-serif"
                        android:text="EXIGÊNCIAS DO DOADOR"
                        android:textColor="#F7A800" />

                    <TextView
                        android:id="@+id/exigencias_doacao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif"
                        android:text="Exigencias do doador"
                        android:textColor="#757575" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/apadrinhamento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/exigencias_apadrinhamento_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="sans-serif"
                        android:text="EXIGÊNCIAS DO DONO"
                        android:textColor="#F7A800" />

                    <TextView
                        android:id="@+id/exigencias_apadrinhamento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif"
                        android:text="Exigencias do dono"
                        android:textColor="#757575" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ajuda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/exigencias_ajuda_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="sans-serif"
                        android:text="O ANIMAL PRECISA DE"
                        android:textColor="#F7A800" />

                    <TextView
                        android:id="@+id/exigencias_ajuda"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif"
                        android:text="O animal precisa de"
                        android:textColor="#757575" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/sobre_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif"
                android:text="MAIS SOBRE O ANIMAL"
                android:textColor="#F7A800"
                app:layout_constraintTop_toBottomOf="@id/blocos" />

            <TextView
                android:id="@+id/sobre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                android:text="Sobre"
                android:textColor="#757575"
                app:layout_constraintTop_toBottomOf="@id/sobre_info" />

            <LinearLayout
                android:id="@+id/buttons_finalizar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="28dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="1.0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sobre">

                <Button
                    android:id="@+id/button_adotar"
                    android:layout_width="148dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginTop="28dp"
                    android:layout_weight="0.5"
                    android:backgroundTint="#FFD358"
                    android:fontFamily="sans-serif"
                    android:text="Pretendo Adotar"
                    android:textAllCaps="true"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/button_apadrinhar"
                    android:layout_width="148dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginTop="28dp"
                    android:layout_weight="0.5"
                    android:backgroundTint="#FFD358"
                    android:fontFamily="sans-serif"
                    android:text="Pretendo Apadrinhar"
                    android:textAllCaps="true"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/button_ajudar"
                    android:layout_width="148dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginTop="28dp"
                    android:layout_weight="0.5"
                    android:backgroundTint="#FFD358"
                    android:fontFamily="sans-serif"
                    android:text="Pretendo Ajudar"
                    android:textAllCaps="true"
                    android:textSize="12sp"
                    android:visibility="gone" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttons_meu_pets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="28dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="1.0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sobre">

                <Button
                    android:id="@+id/button_interessados"
                    android:layout_width="148dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="0.5"
                    android:backgroundTint="@color/verde2"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/preto_texto"
                    android:text="Ver interessados"
                    android:textAllCaps="true"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/button_remover"
                    android:layout_width="148dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.5"
                    android:backgroundTint="@color/verde2"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/preto_texto"
                    android:text="Remover pet"
                    android:textAllCaps="true"
                    android:textSize="12sp" />

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>
    </RelativeLayout>
</ScrollView>