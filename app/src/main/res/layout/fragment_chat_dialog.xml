<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="80dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:divider="?android:listDivider"
            android:orientation="vertical"
            android:showDividers="middle">

            <TextView
                android:id="@+id/remover_contato"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="REMOVER CONTATO"
                android:textColor="@color/cinza_medio"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bloquear_contato"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="BLOQUEAR CONTATO"
                android:textColor="@color/cinza_medio"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/ver_perfil"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="VER PERFIL"
                android:textColor="@color/cinza_medio"
                android:textSize="14sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card2"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_below="@id/card"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/verde2"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <Button
            android:id="@+id/button_cancelar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/verde2"
            android:text="CANCELAR" />

    </android.support.v7.widget.CardView>

</RelativeLayout>
