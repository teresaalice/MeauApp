<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_intro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.unb.meau.activities.MainActivity">

    <ImageView
        android:id="@+id/drawer_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/ic_menu_green_24dp"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/courgette"
        android:gravity="center"
        android:text="OlÃ¡!"
        android:textColor="#FFD358"
        android:textSize="72dp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text1"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textSize="16dp"
        android:textColor="#757575"
        android:text="@string/intro_text" />

    <Button
        android:id="@+id/button_adotar"
        android:layout_width="232dp"
        android:layout_height="50dp"
        android:layout_below="@+id/text2"
        android:layout_marginTop="36dp"
        android:textColor="#434343"
        android:backgroundTint="#FFD358"
        android:layout_centerHorizontal="true"
        android:text="ADOTAR" />

    <Button
        android:id="@+id/button_ajudar"
        android:layout_width="232dp"
        android:layout_height="50dp"
        android:layout_below="@+id/button_adotar"
        android:layout_marginTop="0dp"
        android:textColor="#434343"
        android:backgroundTint="#FFD358"
        android:layout_centerHorizontal="true"
        android:text="AJUDAR" />

    <Button
        android:id="@+id/button_cadastrar_animal"
        android:layout_width="232dp"
        android:layout_height="50dp"
        android:layout_below="@+id/button_ajudar"
        android:layout_marginTop="0dp"
        android:textColor="#434343"
        android:backgroundTint="#FFD358"
        android:layout_centerHorizontal="true"
        android:text="CADASTRAR ANIMAL" />

    <TextView
        android:id="@+id/text_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_cadastrar_animal"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:textColor="#88C9BF"
        android:text="login" />


    <ImageView
        android:id="@+id/image_marca"
        android:layout_width="122dp"
        android:layout_height="44dp"
        android:layout_marginTop="68dp"
        android:layout_marginBottom="32dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_login"
        android:src="@drawable/meau_marca_2"/>

</RelativeLayout>
