<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragment_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        tools:context="com.unb.meau.activities.MainActivity">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#CFE9E5"
            android:gravity="center"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:text="@string/signup_info"
            android:textColor="#434343"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:layout_marginTop="28dp"
            android:text="INFORMAÇÕES PESSOAIS"
            android:textColor="#88C9BF"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:hint="Nome completo"
            android:inputType="textPersonName"
            android:paddingEnd="4dp"
            android:paddingStart="4dp" />

        <EditText
            android:id="@+id/idade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nome"
            android:layout_centerHorizontal="true"
            android:ems="3"
            android:hint="Idade"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idade"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/estado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Estado"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/cidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/estado"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Cidade"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/endereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cidade"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Endereço"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/telefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/endereco"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Telefone"
            android:inputType="phone" />

        <TextView
            android:id="@+id/info_perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/telefone"
            android:layout_marginTop="28dp"
            android:text="INFORMAÇÕES DE PERFIL"
            android:textColor="#88C9BF"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_perfil"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:hint="Nome de usuário"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/username"
            android:ems="10"
            android:hint="Senha"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/senha2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/senha"
            android:ems="10"
            android:hint="Confirmação de senha"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/info_foto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/senha2"
            android:layout_marginTop="28dp"
            android:text="FOTO DE PERFIL"
            android:textColor="#88C9BF"
            android:textSize="16dp" />

        <Button
            android:id="@+id/add_photo"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_below="@id/info_foto"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="adicionar foto" />

        <Button
            android:id="@+id/button_signup"
            android:layout_width="232dp"
            android:layout_height="40dp"
            android:layout_below="@id/add_photo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="#88C9BF"
            android:text="FAZER CADASTRO"
            android:textColor="#434343" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

    </RelativeLayout>
</ScrollView>
